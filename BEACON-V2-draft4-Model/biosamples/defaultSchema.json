{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "biosample",
  "$comment": "version: ga4gh-beacon-biosample-v2.0.0-draft.4",
  "description": "Schema for an biosample entry.",
  "type":"object",
  "properties": {
    "id": {
      "description": "Biosample identifier (external accession or internal ID).",
      "type": "string",
      "example": "pgxbs-kftva634"
    },
    "individualId": {
      "description": "Reference to individual ID (Individual.individualId).",
      "type": "string",
      "example": "pgxind-kftx26aj"
    },
    },
    "derivedFromId": {
      "description": "id of the biosample from which the current biosample was derived (if applicable)",
      "type": "string",
      "example": "pgxbs-cqtvb331"
    },
    "description": {
      "description": "Unstructured text to describe additional properties of this sample.",
      "type": "string",
      "example": "Some free text"
    },
    "sampledTissue": {
      "description": "Tissue from which the sample was taken",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id" : "UBERON:0000474",
        "label" : "female reproductive system"
      }
    },
    "sampledType": {
      "description": "Class for the type of material, e.g., RNA, DNA, cultured cells.",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id" : "EFO:0008479",
        "label" : "genomic DNA"
      }
    },
    "phenotypicFeatures": {
      "description": "List of phenotypic abnormalities of the sample. RECOMMENDED.",
      "type": "list",
      "items": {
        "$ref": "../common/phenotypicFeature.json"
      }
    },
    "measurements": {
      "description": "List of measurements of the sample.",
      "type": "list",
      "items": {
        "$ref": "../common/measurement.json"
      }
    },
    "taxonomy": {
      "description": "Species of the sampled individual.",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id" : "NCBITaxon:9606",
        "label" : "Homo sapiens"
      }
    },
    "timeOfCollection": {
      "description": "Time element providing information about the absolute or relative time of the sample collection.",
      "$ref": "../common/timeElement.json",
      "example" : {
        "age": {
          "iso8601duration": "P53Y8M"
        }
      }
    },
    "histologicalDiagnosis": {
      "description": "Disease diagnosis that was inferred from the histological examination. RECOMMENDED.",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id" : "NCIT:C3778",
        "label" : "Serous Cystadenocarcinoma"
      }      
    },
    "tumorProgression": {
      "description": "Indicates primary, metastatic, recurrent. RECOMMENDED.",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id" : "NCIT:C4813",
        "label" : "Recurrent Malignant Neoplasm"
      }      
    },
    "tumorGrade": {
      "description": "Term representing the tumor grade. Child term of NCIT:C28076 (Disease Grade Qualifier) or equivalent.",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id" : "NCIT:C28080",
        "label" : "Grade 3a"
      }      
    },
    "pathologicalStage": {
      "description": "Pathological stage, if applicable, preferably as subclass of NCIT:C28108 - Disease Stage Qualifier. RECOMMENDED.",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id" : "NCIT:C27977",
        "label" : "Stage IIIA"
      }      
    },
    "pathologicalTnmFinding": {
      "description": "Pathological TNM findings, if applicable, preferably as subclass of NCIT:C48698 - Cancer TNM Finding Category. RECOMMENDED.",
      "type": "list",
      "items": {
        "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json"
      }
    },
    "diagnosticMarkers": {
      "description": "Clinically relevant biomarkers. RECOMMENDED.",
      "type": "list",
      "items": {
        "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json"
      }
    },
    "procedure": {
      "description": "The procedure used to extract the biosample. RECOMMENDED.",
      "$ref": "../common/procedure.json",
      "example": {
        "code": {
          "id": "NCIT:C5189",
          "label": "Radical Cystoprostatectomy"
        }
      }      
    },
    "files": {
      "description": "List of files related to the biosample, e.g. VCF or high-throughput sequencing files.",
      "type": "list",
      "items": {
        "$ref": "../common/file.json"
      }
    },
    "materialSample": {
      "description": "Status of specimen (tumor tissue, normal control, etc.). RECOMMENDED.",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id": "EFO:0009656",
        "label": "neoplastic sample"
      }      
    },
    "sampleProcessing": {
      "description": "Status of how the specimen was processed.",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id": "EFO:0009656",
        "label": "neoplastic sample"
      }      
    },
    "sampleStorage": {
      "description": "Status of how the specimen was stored.",
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/ontologyTerm.json",
      "example": {
        "id": "EFO:0009656",
        "label": "neoplastic sample"
      }      
    },
    "info": {
      "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/beaconCommonComponents.json#/definitions/Info"
    }
  },
  "required": ["id", "biosampleStatus","sampleOriginType"],
  "additionalProperties": true
}
